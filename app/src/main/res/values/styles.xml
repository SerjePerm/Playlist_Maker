<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="mainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/big_padding</item>
        <item name="android:layout_marginTop">@dimen/smallest_padding</item>
        <item name="android:layout_marginBottom">@dimen/big_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:drawablePadding">24dp</item>
    </style>

    <style name="titleWithBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:drawableTint">@color/lightBlack</item>
    </style>

    <style name="settingsTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/items_text_size</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="settingsImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/gray</item>
    </style>

    <style name="settingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/big_padding</item>
        <item name="android:paddingVertical">@dimen/biggest_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="searchFieldImages">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="searchField">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="searchEditText">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="searchTrackFirstTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin8</item>
        <item name="android:layout_marginTop">@dimen/margin14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:textSize">@dimen/items_text_size</item>
    </style>

    <style name="searchTrackSecondTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="recyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="placeHolderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:text">@string/no_internet</item>
    </style>

    <style name="placeHolderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="refreshInternetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/lightBlack</item>
    </style>

    <style name="searchHistoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin18</item>
        <item name="android:layout_marginBottom">@dimen/margin12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:text">@string/search_history_title</item>
    </style>

    <style name="playerTitles">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
    </style>

    <style name="playerValues">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
    </style>

    <style name="backAndPlayButton">
        <item name="tint">@color/lightBlack</item>
    </style>

    <style name="addAndFavButton">
        <item name="android:background">@drawable/round_button_gray</item>
    </style>

    <style name="tabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/lightBlack</item>
        <item name="tabIndicatorColor">@color/lightBlack</item>
    </style>

    <!-- BottomNavigationView -->
    <style name="BottomNavigationViewStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemBackground">@drawable/item_bg</item>
        <item name="itemPaddingTop">@dimen/margin8</item>
        <item name="itemPaddingBottom">@dimen/margin10</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicatorStyle</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="ActiveIndicatorStyle">
        <item name="itemIconTint">@color/blue</item>
    </style>

    <style name="TextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">@color/text_layout_selector</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxStrokeColor">@color/text_layout_selector</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:defaultFocusHighlightEnabled">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>