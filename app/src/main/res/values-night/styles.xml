<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/lightBlack</item>
    </style>

    <style name="mainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/big_padding</item>
        <item name="android:layout_marginTop">@dimen/smallest_padding</item>
        <item name="android:layout_marginBottom">@dimen/big_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="titleWithBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/medium_padding</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="drawableStartCompat">@drawable/arrow_back</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="settingsTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/items_text_size</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="settingsImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="settingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/big_padding</item>
        <item name="android:paddingVertical">@dimen/biggest_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="searchFieldImages">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/lightBlack</item>
    </style>

    <style name="searchField">
        <item name="android:background">@drawable/rounded_shape_dark</item>
    </style>

    <style name="searchEditText">
        <item name="android:textColorHint">@color/lightBlack</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
    </style>

    <style name="searchTrackFirstTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin8</item>
        <item name="android:layout_marginTop">@dimen/margin14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:textSize">@dimen/items_text_size</item>
    </style>

    <style name="searchTrackSecondTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="placeHolderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_weight_400</item>
        <item name="android:text">@string/no_internet</item>
    </style>

    <style name="placeHolderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="refreshInternetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/refresh</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/text_weight_500</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>